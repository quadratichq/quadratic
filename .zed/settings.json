// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/.dev.vars",
      "**/secrets.yml"
    ]
  },
  "inline_completions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/.dev.vars",
      "**/secrets.yml"
    ]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ensure_final_newline_on_save": true,
  "languages": {
    "TypeScript": {
      "formatter": "prettier",
      "prettier": {
        "allowed": true,
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 120,
        "bracketSpacing": true,
        "endOfLine": "auto",
        "plugins": ["prettier-plugin-tailwindcss"]
      },
      "code_actions_on_format": {
        "source.removeUnusedImports": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      "prettier": {
        "allowed": true,
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 120,
        "bracketSpacing": true,
        "endOfLine": "auto",
        "plugins": ["prettier-plugin-tailwindcss"]
      },
      "code_actions_on_format": {
        "source.removeUnusedImports": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    },
    "JavaScript": {
      "formatter": "prettier",
      "prettier": {
        "allowed": true,
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 120,
        "bracketSpacing": true,
        "endOfLine": "auto",
        "plugins": ["prettier-plugin-tailwindcss"]
      },
      "code_actions_on_format": {
        "source.removeUnusedImports": true,
        "source.fixAll.eslint": true,
        "source.organizeImports": true
      }
    }
  },
  "tab_size": 2
}
