model QFeedback {
    id           Int      @id @default(autoincrement())
    feedback     String
    created_date DateTime @default(now())
    qUserId      Int? // Linked to the old QUser object
    userId       Int?
    user         User?    @relation(fields: [userId], references: [id])
}

