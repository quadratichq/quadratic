{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "scripts/**/*.ts",
    "src/routes/v0/workos.logout.POST.ts.deprecated",
    "src/routes/v0/workos.login.POST.ts"
  ],
  "exclude": ["src/**/*.test.ts", "scripts/templates/*.ts"]
}
