{
  "name": "quadratic-rust-renderer",
  "description": "Rust renderer for Quadratic - supports both WASM (browser) and native (cloud) targets",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "vite",
    "dev": "npm run start & npm run serve",
    "dev:perf": "npm run start:perf & npm run serve",
    "start": "cargo watch -s 'npm run build:wasm:dev'",
    "start:perf": "cargo watch -s 'npm run build:wasm'",
    "build": "npm run build:wasm",
    "build:dev": "npm run build:wasm:dev",
    "build:wasm": "wasm-pack build --release --target web --out-dir pkg -- --features wasm",
    "build:wasm:dev": "wasm-pack build --dev --target web --out-dir pkg -- --features wasm",
    "build:native": "cargo build --release --features native",
    "build:native:dev": "cargo build --features native",
    "build:examples": "vite build",
    "preview": "vite preview",
    "run:native": "cargo run --release --features native --",
    "test": "cargo test --features native",
    "test:wasm": "wasm-pack test --headless --chrome --features wasm",
    "lint": "cargo clippy --all-targets --features native -- -D warnings",
    "lint:wasm": "cargo clippy --target wasm32-unknown-unknown --features wasm -- -D warnings",
    "typecheck": "tsc --noEmit",
    "clean": "cargo clean && rm -rf pkg dist"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  }
}
